<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="IMCTest.Fields.FieldBase"
        x:Name="MainGrid"
        RowSpacing="0" ColumnSpacing="0">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="16"/> <!--Space-->
        <ColumnDefinition Width="*"/> <!--Content-->
        <ColumnDefinition Width="16"/> <!--Space-->
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition Height="16"/> <!--Title-->
        <RowDefinition Height="28"/> <!--Field-->
        <RowDefinition Height="8"/> <!--Space-->
        <RowDefinition Height="16"/> <!--Helper Text-->
    </Grid.RowDefinitions>

    <Frame x:Name="BackgroundFrame"
           Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="3"
           BorderColor="White" CornerRadius="3"
        />

    <Label x:Name="TitleLabel"
           Grid.Row="0" Grid.Column="1"
           VerticalTextAlignment="Center" VerticalOptions="Center"
           FontSize="12"/>

    <Label x:Name="HelperTextLabel"
           Grid.Row="3" Grid.Column="1"
           VerticalTextAlignment="Center" VerticalOptions="Center"
           HorizontalOptions="End"
           FontSize="Caption"/>

</Grid>